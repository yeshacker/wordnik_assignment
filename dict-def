#!/usr/bin/env node
'use strict';

var getDefinitions = require('./helpers/get_definitions.js');

/*
Display definitions of a word
 */

var word;

if (process.argv[2]) {
  word = process.argv[2];
}

console.log('Displaying definitions of the word: ', word);

getDefinitions(word, 3, 'noun', false, 'wordnet', false, false);
